<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <a href="./restaurants/new" class="text-secondary">新增餐廳</a>
        <a class="mb-2" href="./restaurants/search">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </a>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="Sababa 沙巴巴中東美食">
            <div class=" card-body p-3">
              <h6 class="card-title mb-1">{{this.title}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.name}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="mw-100 btn-group" role="group" aria-label="Basic example">
              <div class="container">
                <div class="row justify-content-between">
                  <div class="col-4">
                    <button type="button" class="btn btn-outline-secondary">
                      <a href="./restaurants/{{ this._id }}/edit" class="text-secondary">
                        編輯
                      </a>
                    </button>
                  </div>
                  <div class="col-4">
                    <button type="button" class="btn btn-outline-secondary">
                      <a href="./restaurants/{{ this._id }}" class="text-secondary">
                        心得
                      </a>
                    </button>
                  </div>
                  <div class="col-4">
                    <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;"
                      onsubmit="return confirm('確定要刪除「{{ this.name }}」嗎?')">
                      <button type="submit" class="btn btn-outline-secondary">刪除</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>